<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-sm-4"><%= image_tag post.image.url(:thumb) %><br>
      <%= link_to post.caption, post_path(post) %><br>
      by: <%= link_to post.user.user_name, profile_path(post.user.user_name) %><br>
    </div>
  <% end %>
</div>





